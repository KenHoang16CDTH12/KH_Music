<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
    <!-- TextView -->
    <style name="Text16BoldWhite">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Text12AlphaWhite">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:alpha">0.6</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- Toolbar -->
    <style name="ToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <!--Custom Fragment-->
    <style name="CustomDialogFragment" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>
    <style name="ModalBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_modal</item>
        <item name="android:minHeight">@dimen/dp_200</item>
        <item name="android:maxHeight">@dimen/dp_500</item>
    </style>
</resources>
